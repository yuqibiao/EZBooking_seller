<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义的ChangeColorView的自定义属性-->
    <declare-styleable name="ChangeColorView">
        <attr name="change_icon" format="reference" />
        <attr name="change_color" format="color" />
        <attr name="change_text" format="string" />
        <attr name="change_text_color" format="color" />
        <attr name="change_text_size" format="dimension" />
    </declare-styleable>

    <!--自定义滑动选择控件的属性-->
    <declare-styleable name="NumberPicker">
        <attr name="normalTextColor" format="color" />
        <attr name="normalTextSize" format="dimension" />
        <attr name="selecredTextColor" format="color" />
        <attr name="selecredTextSize" format="dimension" />
        <attr name="unitHight" format="dimension" />
        <attr name="itemNumber" format="integer" />
        <attr name="lineColor" format="color" />
        <attr name="maskHight" format="dimension" />
        <attr name="noEmpty" format="boolean" />
        <attr name="isEnable" format="boolean" />
    </declare-styleable>

    <!--圆角 ImageView属性-->
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>

    <!--自定义的日历的属性  -->
        <declare-styleable name="MyCalendar">
            <attr name="calenderWidth" format="dimension" />
            <attr name="calenderHeight" format="dimension" />
            <attr name="padding" format="dimension"/>
        </declare-styleable>

    <!--自定义折线图控件的属性-->
    <declare-styleable name="MyLineChart">
        <!--标注字体的大小-->
        <attr name="label_text_size" format="dimension"/>
        <!--标注字体的颜色-->
        <attr name="label_text_color" format="color"/>
        <!--线的宽度-->
        <attr name="line_width" format="dimension"/>
    </declare-styleable>

    <!--MyGradientTextView属性-->
    <declare-styleable name="MyGradientTextView">
        <attr name="start_color" format="color"/>
        <attr name="center_color" format="color"/>
        <attr name="end_color" format="color"/>
    </declare-styleable>

    <!--ColorAbleImageView属性-->
    <declare-styleable name="ColorAbleImageView">
        <attr name="select_color" format="color"/>
    </declare-styleable>



    </resources>